# Development Environment Configuration
# Copy this to .env for development

# Application Configuration
APP_NAME=OCR Identity REST API (Development)
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Security (Development - Change in production!)
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/jpg"]

# Database Configuration (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=ocr_identity_db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=true

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=5
REDIS_DECODE_RESPONSES=true

# MinIO Configuration (S3 Compatible)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
S3_BUCKET_NAME=ocr-identity-bucket
S3_ENDPOINT_URL=http://minio:9000
S3_USE_SSL=false
S3_VERIFY_SSL=false

# Email Configuration (Mailpit for Development)
EMAIL_SMTP_HOST=mailpit
EMAIL_SMTP_PORT=1025
EMAIL_USERNAME=test@example.com
EMAIL_PASSWORD=
EMAIL_USE_TLS=false
EMAIL_USE_SSL=false
EMAIL_FROM=test@example.com
EMAIL_FROM_NAME=OCR Identity API (Dev)

# Mailpit Configuration
MAILPIT_SMTP_PORT=1025
MAILPIT_UI_PORT=8025

# Debug Configuration
DEBUG_IP=0.0.0.0 