# Production Environment Configuration
# Copy this to .env for production
# IMPORTANT: Change all default passwords and secrets!

# Application Configuration
APP_NAME=OCR Identity REST API (Production)
DEBUG=false
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8002
RELOAD=false

# Security (PRODUCTION - CHANGE THESE!)
SECRET_KEY=your-super-secure-production-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/jpg"]

# Database Configuration (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-secure-db-password
DB_NAME=ocr_identity_db_prod
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_ECHO=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20
REDIS_DECODE_RESPONSES=true

# MinIO Configuration (S3 Compatible)
MINIO_ROOT_USER=your-minio-user
MINIO_ROOT_PASSWORD=your-secure-minio-password
MINIO_API_PORT=9004
MINIO_CONSOLE_PORT=9005
AWS_ACCESS_KEY_ID=your-minio-user
AWS_SECRET_ACCESS_KEY=your-secure-minio-password
AWS_REGION=us-east-1
S3_BUCKET_NAME=ocr-identity-bucket-prod
S3_ENDPOINT_URL=http://minio:9000
S3_USE_SSL=false
S3_VERIFY_SSL=false

# Email Configuration (Production SMTP)
EMAIL_SMTP_HOST=your-smtp-server.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@your-domain.com
EMAIL_PASSWORD=your-email-password
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
EMAIL_FROM=your-email@your-domain.com
EMAIL_FROM_NAME=OCR Identity API (Production)

# Production-specific settings
DB_PORT=5434
REDIS_PORT=6381
APP_PORT=8002

# Production Security Settings
# Uncomment and configure these for production
# SSL_CERT_FILE=/path/to/cert.pem
# SSL_KEY_FILE=/path/to/key.pem
# CORS_ORIGINS=["https://your-domain.com"]
